{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
<div class="container">

    <h1>Post</h1>

    <img src="{{asset('images/media/' ~ post.media)}}" alt="{{post.media}}">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Media</th>
                <td>{{ post.media }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}" class="btn btn-primary">back to list</a>
    {% if app.user is same as( post.author) %}
    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}
    {% endif %}

    <div class="comments">
        <h2>Comment section <span class="badge bg-secondary">{{post.comments|length}}</span></h2>
        {% for comment in comments %}
            <div class="comment-item">
                <p>@{{comment.author}}</p>
                <p>{{comment.content}}</p>
                <p>{{comment.createdAt|date('d M Y Ã  H:i')}}</p>
            </div>
        {% endfor %}
    </div>

    {{form(form)}}

</div>
{% endblock %}
